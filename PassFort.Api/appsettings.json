{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=passfort;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long",
    "Issuer": "PassFort.API",
    "Audience": "PassFort.Client",
    "ExpiryInMinutes": 60
  },
  "SecuritySettings": {
    "EnableHSTS": true,
    "HSTSMaxAge": 31536000,
    "EnableCSP": true,
    "CSPReportOnly": false,
    "AllowedOrigins": {
      "Development": [
        "http://localhost:3000",
        "http://localhost:8080",
        "http://127.0.0.1:3000",
        "http://127.0.0.1:8080"
      ],
      "Production": [
        "https://passfort.com",
        "https://www.passfort.com",
        "https://app.passfort.com"
      ]
    }
  }
}
